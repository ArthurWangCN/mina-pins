.header {
    position: fixed;
    top: 0;
    width: 100%;
    background-color: #ffffff;
    z-index: 99;
}

.tag-list {
    white-space: nowrap;
    margin: 20rpx 0;
}
.tag-item {
    display: inline-block;
    padding: 0 30rpx;
    margin: 0 20rpx;
    line-height: 64rpx;
    border-radius: 64rpx;
    border: 1px solid red;
}

.pin-list {
    position: absolute;
    top: 220rpx;
    width: 100%;
    height: calc(100vh - 220rpx);
    overflow-y: auto;
    display: flex;
    flex-wrap: wrap;
    background-color: rgb(245, 245, 245);
    box-sizing: border-box;
    padding: 10rpx;
}
.pin-item {
    width: calc(50% - 20rpx);
    height: 400rpx;
    flex-shrink: 0;
    box-sizing: border-box;
    padding: 10px;
    background-color: #fff;
    margin: 10rpx;
    overflow: hidden;
}
.pin-title {
    font-size: 32rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.pin-image {
    width: 100%;
    height: 76rpx;
    margin: 40rpx 0;
}
.pin-date {
    font-size: 24rpx;
}